#!/bin/bash

# ========== PORT RELAY MONITOR ==========
# Displays real-time status of the relay

set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
source "$SCRIPT_DIR/lib/relay-config"

load_env || exit 1
parse_relay_entries

LOG_FILE="$SCRIPT_DIR/logs/relay.log"
RELAY_TOTAL=${#RELAY_ENTRIES[@]}
if [[ -n "${LINES:-}" && "$LINES" -gt 24 ]]; then
	RELAY_DISPLAY_MAX=$((LINES - 18))
else
	RELAY_DISPLAY_MAX=25
fi
if [[ "$RELAY_DISPLAY_MAX" -lt 1 ]]; then
	RELAY_DISPLAY_MAX=1
fi

while true; do
	clear 2>/dev/null || true
	echo "========================================"
	echo "Port Relay Monitor"
	echo "========================================"
	echo
	echo "Configuration:"
	echo "  Project: $SCRIPT_DIR"
	echo "  Relays: $RELAY_TOTAL total"
	if [[ -n "${RELAY_DEBUG:-}" ]]; then
		echo "  [DEBUG] PATH=$PATH"
		echo "  [DEBUG] nc=$(command -v nc 2>/dev/null || echo 'not found'); timeout=$(command -v timeout 2>/dev/null || echo 'not found'); bash=$(command -v bash 2>/dev/null || echo 'not found')"
	fi
	echo
	echo "Outbound Connectivity:"
	idx=0
	for entry in "${RELAY_ENTRIES[@]}"; do
		[[ $idx -ge $RELAY_DISPLAY_MAX ]] && break
		IFS=':' read -r in_port out_port out_host <<< "$entry"
		echo -n "  ✓ $out_host:$out_port: "
		check_target "$out_host" "$out_port" "${HEALTH_CHECK_TIMEOUT:-5}" "${HEALTH_CHECK_RETRIES:-3}" && echo "UP" || echo "DOWN"
		((idx++)) || true
	done
	if [[ $RELAY_TOTAL -gt $RELAY_DISPLAY_MAX ]]; then
		echo "  ... and $((RELAY_TOTAL - RELAY_DISPLAY_MAX)) more ($RELAY_TOTAL total)"
	fi
	echo
	echo "Health (same check as relay daemon):"
	idx=0
	for entry in "${RELAY_ENTRIES[@]}"; do
		[[ $idx -ge $RELAY_DISPLAY_MAX ]] && break
		IFS=':' read -r in_port out_port out_host <<< "$entry"
		echo -n "  ✓ $out_host:$out_port: "
		check_target "$out_host" "$out_port" "${HEALTH_CHECK_TIMEOUT:-10}" "${HEALTH_CHECK_RETRIES:-3}" && echo "UP" || echo "DOWN"
		((idx++)) || true
	done
	if [[ $RELAY_TOTAL -gt $RELAY_DISPLAY_MAX ]]; then
		echo "  ... and $((RELAY_TOTAL - RELAY_DISPLAY_MAX)) more"
	fi
	echo
	echo "Relay Service Status:"
	echo -n "  Service: "
	if command -v systemctl >/dev/null 2>&1; then
		if systemctl is-active "$RELAY_SERVICE_NAME" > /dev/null 2>&1; then
			echo "✓ RUNNING"
		else
			echo "✗ STOPPED"
		fi
	else
		echo "N/A (no systemd)"
	fi
	echo
	echo "Connections per relay:"
	idx=0
	for entry in "${RELAY_ENTRIES[@]}"; do
		[[ $idx -ge $RELAY_DISPLAY_MAX ]] && break
		in_port="${entry%%:*}"
		if command -v ss >/dev/null 2>&1; then
			count=$(ss -tn 2>/dev/null | grep ":$in_port " | wc -l)
			echo "  Port $in_port: $count connection(s)"
		else
			echo "  Port $in_port: N/A (run on relay server)"
		fi
		((idx++)) || true
	done
	if [[ $RELAY_TOTAL -gt $RELAY_DISPLAY_MAX ]]; then
		echo "  ... and $((RELAY_TOTAL - RELAY_DISPLAY_MAX)) more ($RELAY_TOTAL total)"
	fi
	echo
	echo "Recent Logs (from relay daemon; restart relay after config change):"
	if [[ -f "$LOG_FILE" ]]; then
		tail -5 "$LOG_FILE"
	else
		echo "  (No logs - relay not running here)"
	fi
	echo
	echo "========================================"
	echo "Updated every 5 seconds (Ctrl+C to exit)"
	echo "========================================"
	sleep 5
done
